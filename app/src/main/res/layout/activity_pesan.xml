<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jkt48.vbast.laundry_online.Pesan">
    <TextView
        android:id="@+id/txt_user_nama"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="14dp"
        android:text="Nama"
        android:layout_margin="@dimen/margin_horizontal"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        />
    <TextView
        android:id="@+id/txt_user_alamat"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_marginBottom="@dimen/margin_horizontal"
        android:text="Alamat"
        android:drawableLeft="@drawable/mapmarker"
        />
    <TextView
        android:id="@+id/txt_user_no_hp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_marginBottom="@dimen/margin_horizontal"
        android:drawableLeft="@drawable/phonereceiver"
        android:text="No Hp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_horizontal"
        android:background="@drawable/tagihan"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:text="Jumlah Berat"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/margin_horizontal"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/berat_pesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_horizontal"
                android:text="0"
                />
            <ImageView
                android:id="@+id/img_tambah"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/margin_horizontal"
                android:src="@drawable/plus"
                />
            <ImageView
                android:id="@+id/img_kurang"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/margin_horizontal"
                android:src="@drawable/minus"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga / Kg"
                android:layout_margin="@dimen/margin_horizontal"
                />
            <TextView
                android:id="@+id/txt_harga_per_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:layout_margin="@dimen/margin_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_horizontal"
                android:text="Total Bayar"
                />
            <TextView
                android:id="@+id/tv_total_bayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_horizontal"
                android:text="0"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_horizontal"
        >
        <Button
            android:id="@+id/btn_transaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorButtonPesan"
            android:textColor="#fff"
            android:text="Pesan"/>

    </LinearLayout>
</LinearLayout>
