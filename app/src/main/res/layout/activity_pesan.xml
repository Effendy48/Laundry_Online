<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jkt48.vbast.laundry_online.Pesan">
    <EditText
        android:id="@+id/et_user_pesan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="10dp"
        android:layout_margin="@dimen/margin_horizontal"
        android:background="@drawable/textbox_design"
        android:drawableRight="@drawable/user"
        android:drawablePadding="10dp"
        android:enabled="false"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:text="Jumlah Berat"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/margin_horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/berat_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_horizontal"
            android:text="0"
            />
        <ImageView
            android:id="@+id/img_tambah"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/margin_horizontal"
            android:src="@drawable/plus"
            />
        <ImageView
            android:id="@+id/img_kurang"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/margin_horizontal"
            android:src="@drawable/minus"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga / Kg"
            android:layout_margin="@dimen/margin_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:layout_margin="@dimen/margin_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_horizontal"
            android:text="Total Bayar"
            />
        <TextView
            android:id="@+id/tv_total_bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_horizontal"
            android:text="0"
            />
    </LinearLayout>
</LinearLayout>
