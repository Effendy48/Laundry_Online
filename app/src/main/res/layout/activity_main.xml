<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.jkt48.vbast.laundry_online.MainActivity">
    <Button
        android:id="@+id/btn_pesan"
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:drawableTop="@drawable/laundry"
        android:drawablePadding="10dp"
        android:background="@drawable/textbox_design"
        android:padding="20dp"
        android:text="Pesan"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/btn_tunggu"
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:drawableTop="@drawable/clothes"
        android:drawablePadding="10dp"
        android:background="@drawable/textbox_design"
        android:padding="20dp"
        android:text="Tunggu"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/btn_bayar"
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:drawableTop="@drawable/squeeze"
        android:drawablePadding="10dp"
        android:background="@drawable/textbox_design"
        android:padding="20dp"
        android:text="Bayar"
        android:layout_height="100dp" />

</LinearLayout>
